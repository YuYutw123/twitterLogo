{
    "manifest_version": 3,
    "name": "twitterLogo",
    "version": "1.0",
    "description": "Get twitter bird back",

    "action":{
        "default_icon": {
            "16" : "/img/icon_16.png",
            "48" : "/img/icon_48.png",
            "128" : "/img/icon_128.png"
        }
    },

    "permissions":[
        "activeTab"
    ],
    
    "icons": {
        "16" : "/img/icon_16.png",
        "48" : "/img/icon_48.png",
        "128" : "/img/icon_128.png"
    },
    "content_scripts" : [{
            "matches" : ["https://twitter.com/*", "https://twitter.com/home"],
            "css" : ["main.css"],
            "js" : ["main.js"]
        }
    ]
  }